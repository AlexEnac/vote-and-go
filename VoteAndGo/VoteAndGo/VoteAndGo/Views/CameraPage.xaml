<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoteAndGo.Views.CameraPage"
             xmlns:vm="clr-namespace:VoteAndGo.ViewModels"
             Title="{Binding Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image x:Name="CameraImage" Source="{Binding Image}"/>

        <Label x:Name="RecognizedText" Grid.Row="1"/>

        <Button x:Name="CameraButton" Text="Take Photo"
                Grid.Row="2"/>

    </Grid>
</ContentPage>